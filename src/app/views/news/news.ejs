<!DOCTYPE html>
<html lang="es">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/style.css" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-dark bg-dark">
            <a href="#" class="navbar-brand mx-auto">NOTICIAS</a>
        </nav>

        <div class="container">
            <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                        <td>ID</td>
                        <td>Título</td>
                        <td>Contenido</td>
                    </tr>
                    <% for(var i = 0; i < news.length; i++) { %>

                    <tr>
                        <td><%= news[i].id_news %></td>
                        <td><%= news[i].title %></td>
                        <td><%= news[i].news %></td>
                    </tr>

                <% } %>
                </table>
            </div>
            <div class="col-md-6 mt-4 card">
                <form action="/news" method="post" class="card-body">
                    <h3 class="card-title text-center">Agregar Noticia</h3>
                    <div class="form-group">
                        <input id="title" type="text" name="title" class="form-control" placeholder="título">
                    </div>
                    <div class="form-group">
                        <input type="text" name="news" class="form-control" placeholder="contenido">
                    </div>
                    <input type="submit" class="btn btn-primary">
                </form>
            </div>
        </div>
        </div>
        <script>
            document.getElementById('title').focus();
        </script>
    </body>
</html>